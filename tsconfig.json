{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["es2019", "dom"],
		"types": ["react", "node"],
		"moduleResolution": "node",
		"noEmit": false,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "esnext"
	},
	"include": ["./"],
	"exclude": [
		"documentation",
		"node_modules"
	],

	"typedocOptions": {
		"disableSources": true,
		"entryPoints": [ "src/index.ts" ],
		"out": "documentation/html"
	}
}